{
  "openapi": "3.0.0",
  "info": {
    "title": "API da lista de tarefas",
    "description": "API para uma lista de tarefas ",
    "termsOfService": "http://localhost/3000/terms",
    "contact": {
      "email": "jung.kook@ccc.ufcg.edu.br"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/home",
      "description": "API de teste"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "summary": "cadastro de usuario",
        "description": "essa rota cadastra um usuario",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "id": "BTS",
                    "name": "Jungkook",
                    "email": "jung.kook@ccc.ufcg.edu.br",
                    "password": "gabslindo"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "description": "busca de um usuario por um id",
        "summary": "busca de um usuario por um id",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "id do usuario para busca",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/tasks": {
      "post": {
        "summary": "cadastro de task",
        "description": "essa rota cadastra um usuario",
        "tags": ["Tasks"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Task"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Task": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in-progress", "completed"]
          },
          "userId": {
            "type": "string"
          }
        },
        "required": ["id", "title", "description", "status", "userId"]
      }
    }
  }
}
